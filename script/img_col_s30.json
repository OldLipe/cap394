      "nodata" : -1000
    },
    "B06" : {
      "pattern" : ".+B06$",
      "nodata" : -1000
    },
    "B07" : {
      "pattern" : ".+B07$",
      "nodata" : -1000
    },
    "B08" : {
      "pattern" : ".+B08$",
      "nodata" : -1000
    },
    "B8A" : {
      "pattern" : ".+B8A$",
      "nodata" : -1000
    },
    "B09" : {
      "pattern" : ".+B09$",
      "nodata" : -1000
    },
     "B10" : {
      "pattern" : ".+B10$",
